.group 			  { 
  position:relative; 
  margin-bottom:80rpx; 
}

input 				{
  font-size:44rpx;
  padding:10rpx 10rpx 20rpx 5rpx;
  display:block;
  width:500rpx;
  border:none;
  border-bottom:1px solid #757575;
}

label 				 {
  color:#999; 
  font-size:44rpx;
  font-weight:normal;
  position:absolute;
  pointer-events:none;
  left:130rpx;
  top:0rpx;
  transition:0.2s ease all; 
  -moz-transition:0.2s ease all; 
  -webkit-transition:0.2s ease all;
}

.inputactive	{
  top:-40rpx;
  font-size:30rpx;
  color:#5264AE;
}

.bar1 	{ position:relative; display:block; width:500rpx; }
.bar1:before, .bar1:after 	{
  content:'';
  height:6rpx; 
  width:0;
  bottom:1rpx; 
  position:absolute;
  background:#5264AE; 
  transition:0.2s ease all; 
  -moz-transition:0.2s ease all; 
  -webkit-transition:0.2s ease all;
}
.bar1:before {
  left:50%;
}
.bar1:after {
  right:50%; 
}

.bar2 	{ position:relative; display:block; width:500rpx; }
.bar2:before, .bar2:after 	{
  content:'';
  height:6rpx; 
  width:0;
  bottom:0rpx; 
  position:absolute;
  background:#5264AE; 
  transition:0.2s ease all; 
  -moz-transition:0.2s ease all; 
  -webkit-transition:0.2s ease all;
}
.bar2:before {
  left:50%;
}
.bar2:after {
  right:50%; 
}

.bar2:before, .bar2:after{
  width:50%;
}


.highlight {
  position:absolute;
  height:60%; 
  width:100px; 
  top:25%; 
  left:130rpx;
  pointer-events:none;
  opacity:0.5;
}

.focushighlight {
  position:absolute;
  height:60%; 
  width:100px; 
  top:25%; 
  left:130rpx;
  pointer-events:none;
  opacity:0.5;
  -webkit-animation:inputHighlighter 0.3s ease;
  -moz-animation:inputHighlighter 0.3s ease;
  animation:inputHighlighter 0.3s ease;
}

@keyframes inputHighlighter {
	from { background:#5264AE; }
  to 	{ width:0; background:transparent; }
}


