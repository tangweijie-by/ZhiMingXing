<!--pages/welcome/welcome.wxml-->

<image src="/img/bground.svg"  mode='aspectFill' class="bground"></image>

<scroll-view scroll-y class="scrollPage">
  <view class="flex justify-center" style="padding-top:{{0.15*RpxHeight}}rpx;">
    <image src='/img/logo.svg' mode='widthFix' style='width:55%;'></image>
  </view>
  <view class="flex justify-center" style="padding-top:{{0.15*RpxHeight}}rpx;">
    <image src='/img/slogan.svg' mode='widthFix' style='width:85%;'></image>
  </view>
  <view class="padding flex flex-direction" style="position:fixed;bottom:{{0.075*RpxHeight}}rpx;width:100%;">
    <button class="cu-btn bg-blue lg" bindtap="_next">下一步</button>
  </view>
  <view class="padding flex  justify-center" style="position:fixed;bottom:{{0.015*RpxHeight}}rpx;width:100%;">
    <text>专注长沙家教服务</text>
  </view>
</scroll-view>

